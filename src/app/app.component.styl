@keyframes fadeIn
	from
		opacity: 0
	to
		opacity: 1


#main-container
	height: 100%
	#menu-container
		opacity: 0
		animation: fadeIn .5s ease-in 1s 1 forwards
		#menu-small
			opacity: 0
			top: 0
			position: fixed
			visibility: hidden
			transition: visibility .3s, opacity .3s linear
			width: 100%
			background-color: red
			height: 2em
			@media screen and (max-width: 1100px)
				visibility: visible
				opacity: 1
		#menu-large
			opacity: 0
			position: fixed
			top: 0
			visibility: hidden
			transition: visibility 0s, opacity .3s linear
			@media screen and (min-width: 1100px)
				visibility: visible
				opacity: 1
			ul
				margin: 2rem
				padding: 0
				list-style-type: none
				li
					margin-bottom: 2em
					a
						color: white
						display: inline-block
						font-size: 1.6rem
						font-weight: bold
						height: 3rem
						line-height: 3rem
						opacity: .07
						padding-left: 3.5rem
						text-decoration: none
						width: 5rem
						transition: all .15s ease
						&:hover
							color: black
							opacity: .2
				#search-link
					background: url(/assets/icons/search.svg) 5px 5px no-repeat
				#bible-link
					background: url(/assets/icons/bible.svg) 5px 5px no-repeat
				#profile-link
					background: url(/assets/icons/profile.svg) 5px 5px no-repeat
				#feed-link
					background: url(/assets/icons/feed.svg) 5px 5px no-repeat
