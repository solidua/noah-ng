@keyframes fadeIn
	from
		opacity: 0
	to
		opacity: 1


#main-container
	height: 100%
	#menu-container
		opacity: 0
		animation: fadeIn .5s ease-in 1s 1 forwards
		#menu-spacer
			height: 3.5em
			width: 100%
			top: 0
			display: hidden
			transition: height .2s ease-out
			@media screen and (min-width: 1100px)
				display: block
				height: 0
		#menu-small
			background-color: rgba(255,255,255,.99)
			border-bottom: #eeeeee solid 1px
			height: 3.5em
			opacity: 0
			position: fixed
			top: 0
			transition: visibility .3s, opacity .3s ease-out
			visibility: hidden
			width: 100%
			@media screen and (max-width: 1100px)
				visibility: visible
				opacity: 1
			ul
				list-style-type: none
				display: flex
				flex-direction: row
				justify-content: flex-end
				a
					padding: 0 1em
		#menu-large
			opacity: 0
			position: fixed
			top: 0
			visibility: hidden
			transition: visibility 0s, opacity .3s ease-out
			@media screen and (min-width: 1100px)
				visibility: visible
				opacity: 1
			ul
				margin: 2rem
				padding: 0
				list-style-type: none
				li
					margin-bottom: 2em
					a
						color: white
						display: inline-block
						font-size: 1.6rem
						font-weight: bold
						height: 3rem
						line-height: 3rem
						opacity: .07
						padding-left: 3.5rem
						text-decoration: none
						width: 5rem
						transition: all .15s ease
						&:hover
							color: black
							opacity: .2
				#search-lg
					background: url(/assets/icons/search.svg) 5px 5px no-repeat
				#bible-lg
					background: url(/assets/icons/bible.svg) 5px 5px no-repeat
				#feed-lg
					background: url(/assets/icons/feed.svg) 5px 5px no-repeat
				#profile-lg
					background: url(/assets/icons/profile.svg) 5px 5px no-repeat
