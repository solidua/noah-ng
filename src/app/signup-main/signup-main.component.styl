// For coloring placeholder
placeholder()
    &::-webkit-input-placeholder
        {block}
    &:-moz-placeholder
        {block}
    &::-moz-placeholder
        {block}
    &:-ms-input-placeholder
        {block}

// Colors
ui-text = #C4C4C4
input-text = #333333

.button-lg // Sign Up Submit Button, Sign Up Facebook Button
	border-radius: 6px
	border: none
	box-shadow: 0 4px 6px rgba(50,50,93,.11),0 1px 3px rgba(0,0,0,.08)
	box-sizing: border-box
	color: white
	font-size: 16px
	font-weight: bold
	text-align: center
	width: 313px
	
// Register Main structure
#register-container
	height: 100%
	margin: auto
	max-width: 24rem
	text-align: center 
	// display: flex
	// justify-content: center
	.logo-lg
		color: #EEEEEE
		font-size: 72px
		font-weight: bold
		margin: 5rem auto
		@media screen and (min-width: 768px)
			margin: 7rem auto
	#register-form	
		.form-group
			margin-bottom: 14px
			input // Email, Full Name, Password
				background-color: #F2F2F2
				border-radius: 6px
				border: none
				box-sizing: border-box
				color: input-text
				font-size: 15px
				padding: 13px 17px 				
				width: 313px
				+placeholder()
					color: ui-text
		:placeholder
			color: red
		.button-submit
			background-color: #6DC675
			padding: 13px 0px
			&:hover
				transition: all .15s ease;
				background-color: hsla(125,44%,63%,1)
				transform: translate(0,-1px)
				box-shadow:0 7px 14px rgba(50,50,93,.1),0 3px 6px rgba(0,0,0,.08)
			&:active
				color: hsla(125,28%,92%,1)
				background-color: hsla(125,44%,55%,1)
				transition: all .15s ease;
				transform: translate(0,1px)
				box-shadow: 0 0 0
	#register-social
		#register-facebook
			background: #3B5998 url(assets/images/facebook_icon.svg) 53px 12px no-repeat
			margin: 30px 0px
			padding: 13px 0px 13px 32px
			&:hover
				transition: all .15s ease;
				background-color: hsla(221,44%,45%,1)
				transform: translate(0,-1px)
				box-shadow:0 7px 14px rgba(50,50,93,.1),0 3px 6px rgba(0,0,0,.08)
			&:active
				color: hsla(221,28%,92%,1)
				background-color: hsla(221,44%,37%,1)
				transition: all .15s ease;
				transform: translate(0,1px)
				box-shadow: 0 0 0		
		button // register-twitter, register-google
			border: none
			box-sizing: border-box
			font-size: 15px
			font-weight: bold
			text-align: center
		#register-twitter
			background: white url(assets/images/twitter_icon.svg) 12px 2px no-repeat
			color: #00ACED
			padding: 5px 40px 5px 40px
		#register-google
			background: white url(assets/images/google_icon.svg) 12px 2px no-repeat
			color: ui-text
			padding: 5px 18px 5px 40px
	#signin-link
		a
			color: #6DC675
			font-weight: 300
			font-size: 15px
			text-decoration: none
		margin-top: 30px 