#signup-container
	height: 100%
	text-align: center
	// display: flex
	// justify-content: center
	.logo-lg
		font-size: 72px
		font-weight: bold
		color: #E1E1E1
		padding: 50px 80px
	#signup-form	
		.form-group
			margin-bottom: 14px
			input
				box-sizing: border-box
				background-color: #F7F7F7
				border: none
				border-radius: 6px
				color: #C4C4C4
				font-size: 15px
				width: 313px
				padding: 13px 17px 
		.button-submit
			font-weight: 300
			box-sizing: border-box
			width: 313px
			border: none
			border-radius: 6px
			padding: 13px 0px
			text-align: center
			font-size: 16px
			background-color: #6DC675
			color: white
	#signup-social
		#signup-facebook
			margin-top: 30px
			font-weight: bold
			box-sizing: border-box
			width: 313px
			border: none
			border-radius: 6px
			padding: 13px 0px
			text-align: center
			font-size: 16px
			background-color: #3B5998
			color: white
		#signup-or
			margin: 15px 0px 15px
			color: #C4C4C4
			font-size: 15px
			font-weight: 300
		#signup-twitter
			font-weight: bold
			color: #00ACED
			font-size: 15px
			box-sizing: border-box
			border: none
			text-align: center
			background-color: white
		#signup-google
			font-weight: bold
			color: #C4C4C4
			font-size: 15px
			box-sizing: border-box
			border: none
			text-align: center
			background-color: white
	#signin-link
		margin-top: 30px
		color: #C4C4C4
		font-size: 15px
		font-weight: 300
		#signin-link-highlighted
			color: #6DC675
			text-decoration: none