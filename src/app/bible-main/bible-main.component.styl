#bible-container
	margin: auto
	max-width: 40rem
	padding: 0em 1.5em
	h1
		font-size: 31px
		text-align: center
		margin: 95px 0px

	span
		line-height: 26.4px

	.verse-num
		position: relative 
		font-size: 12px
		bottom: 4px
		right: 2px
		cursor: pointer
		margin-left: 1px
		font-weight: bold

	.blue
		color: #0076FF

	.red
		color: #FF512E !important

	.yellow
		color: #FF9600