#question-container
  background-color: #F8F8F8
  height: 100%
  display: flex
  flex-direction: column 
  #question-inner-container
    box-sizing: border-box
    margin-top: 54px
    background-color: white 
    width: 100%
    border-radius: 10px 10px 0 0
    flex: 1
    #question-card
      padding: 25px 30px 25px 30px
      border-bottom: solid 1px #EEEEEE
      overflow: hidden
      p
        font-weight: 300 
        font-size: 20px 
        margin: 0 
        margin-bottom: 15px
      #question-stats
        font-size: 11px 
        color: #C4C4C4
        font-weight: 300 
        margin-bottom: 25px
      #answer-btn  
        background-color: #4990E2
        color: white 
        font-size: 14px 
        border: none 
        border-radius: 10px
        padding: 11px 30px
        cursor: pointer
        float: right
        margin-right: -15px
    #answers-container
      padding: 0px 30px
        
    .question-answer-container
      padding: 30px 
      .answer-stats
        font-size: 11px
        color: #C4C4C4
        font-weight: 300
      p
        font-size: 15px
        color: #333333
        margin: 0 
        margin-top: 5px
        
  #answer-question-container
    position: absolute
    width: 100%
    height: 100%
    background-color: white
    border-radius: 10px 10px 0px 0px
    #answer-form
      width: 100%
      height: 100%
      display: flex
      flex-direction: column
      #answer-textarea
        flex-grow: 1 
        background-color: white 
        padding: 30px 15px
        border: 0 
        border-top: 1px solid rgba(0,0,0,.15)
        resize: none
        font-size: 16px
        font-weight: 300 
        margin-top: 70px
      button
        position: absolute
        bottom: 14px 
        margin-left: auto 
        margin-right: auto 
        left: 0 
        right: 0 
        height: 45px
        width: 90%
        background-color: #3595EB
        color: white 
        font-size: 16px 
        border: none 
        border-radius: 10px
        cursor: pointer
    
          

      

      
        
      