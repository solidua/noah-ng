  #answer-question-container
    top: 0
    position: absolute
    width: 100%
    height: 100%
    background-color: white
    border: none
    border-radius: 10px 10px 0px 0px
    #text-options 
      margin-top: 80px
      border-top: 1px solid rgba(0,0,0,.15)
      border-bottom: 1px solid rgba(0,0,0,.15)
      padding: 16px 40px
      #bold-btn
        display: inline-block
        height: 21px
        width: 16px
        background-color: transparent
        background: url(assets/images/bold.png) no-repeat
        background-size: cover
        margin-right: 40px
      #italicize-btn
        display: inline-block
        height: 19px
        width: 18px
        background-color: transparent
        background: url(assets/images/italicize.png) no-repeat
        background-size: cover
        
    #answer-form
      width: 100%
      height: 100%
      display: flex
      flex-direction: column
      textarea
        flex-grow: 1
        background-color: white
        padding: 21px 18px
        border: 0
        border-bottom: 1px solid rgba(0,0,0,.15)
        resize: none
        font-size: 32px
        font-weight: 300
      #submit-button 
        border: none 
        background-color: #4990E2
        color: white
        border-radius: 10px
        font-size: 14px
        font-weight: 300
        padding: 11px 30px
        position: absolute
        top: 20px
        right: 15px
        font-weight: 300
    #exit-button
      position: absolute
      top: 29px
      left: 33px 
      border: none
      background-color: transparent
      background: url(assets/images/exit.png) no-repeat
      height: 23px
      width: 23px
    
          

      

      
        
      