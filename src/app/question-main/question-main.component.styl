#question-container
  background-color: #F8F8F8
  height: 100%
  display: flex
  flex-direction: column 
  #question-inner-container
    box-sizing: border-box
    margin-top: 80px
    background-color: white
    width: 100%
    border-radius: 10px 10px 0 0
    flex: 1
    #question-card
      padding: 30px 15px 40px 15px
      p
        font-weight: 300 
        font-size: 15px 
        margin: 0 
        margin-bottom: 7px
      #question-stats
        font-size: 11px 
        color: #C4C4C4
        font-weight: 300 
    .question-answer-container
      padding: 30px 
      .answer-stats
        font-size: 11px
        color: #C4C4C4
        font-weight: 300
      p
        font-size: 15px
        color: #333333
        margin: 0 
        margin-top: 5px
  #answer-btn
    position: fixed 
    bottom: 14px 
    margin-left: auto 
    margin-right: auto 
    left: 0 
    right: 0 
    height: 45px
    width: 90%
    background-color: #3595EB
    color: white 
    font-size: 16px 
    border: none 
    border-radius: 10px
    cursor: pointer
  #answer-question-container
    position: absolute
    width: 100%
    height: 100%
    background-color: white
    border-radius: 10px 10px 0px 0px
    #answer-form
      width: 100%
      height: 100%
      display: flex
      flex-direction: column
      #answer-textarea
        flex-grow: 1 
        background-color: white 
        padding: 30px 15px
        border: 0 
        border-top: 1px solid rgba(0,0,0,.15)
        resize: none
        font-size: 16px
        font-weight: 300 
        margin-top: 70px
      button
        position: absolute
        bottom: 14px 
        margin-left: auto 
        margin-right: auto 
        left: 0 
        right: 0 
        height: 45px
        width: 90%
        background-color: #3595EB
        color: white 
        font-size: 16px 
        border: none 
        border-radius: 10px
        cursor: pointer
    
          

      

      
        
      